{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
		"rootDir": "ts",
		"module":"commonjs",
		"target":"es2016",
		"allowJs": false,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"skipLibCheck": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"lib": ["es2016", "es2015"],
		
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"pretty": true,
	},
	"include": ["ts/**/*.ts"]
}
