{
	"compilerOptions": {
		"baseUrl": "ts",
		"outDir": "dist",
		"declaration": true,
		"module":"commonjs",
		"target":"es2016",
		"allowJs": false,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"inlineSources": true,
		"skipLibCheck": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"preserveSymlinks": false,
		"importHelpers": true,
		"strictNullChecks": true,
		"lib": ["es2016", "es2015"],
		"pretty": true,
		"paths": {
			"require-injector": ["./index.ts"],
			"require-injector/*": ["./*"],
			"*": ["../node_modules/*", "../node_modules/@types/*"]
		}
	},
	"include": ["ts/**/*.ts"]
}
